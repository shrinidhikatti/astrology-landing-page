# Environment Configuration
NODE_ENV=production
PORT=3000

# Razorpay Configuration
RAZORPAY_KEY_ID=rzp_live_YOUR_KEY_ID_HERE
RAZORPAY_KEY_SECRET=YOUR_SECRET_KEY_HERE
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_here

# Shiprocket Configuration
SHIPROCKET_EMAIL=your-email@domain.com
SHIPROCKET_PASSWORD=your-shiprocket-password
SHIPROCKET_API_URL=https://apiv2.shiprocket.in/v1/external

# EmailJS Configuration (for notifications)
EMAILJS_SERVICE_ID=your_service_id
EMAILJS_TEMPLATE_ID=your_template_id
EMAILJS_PUBLIC_KEY=your_public_key

# Google Sheets Configuration
GOOGLE_SHEETS_URL=your_google_sheets_webhook_url

# Security
JWT_SECRET=your-jwt-secret-key-here
CORS_ORIGIN=*

# File Storage
ORDERS_FILE=./data/orders.json
PAYMENT_LOGS_FILE=./data/payment_logs.json
SHIPROCKET_LOGS_FILE=./data/shiprocket_logs.json